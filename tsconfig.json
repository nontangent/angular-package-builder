{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "pretty": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "lib": ["es2018"],
    "types": ["node", "jest"],
    "outDir": "dist/ng-packagr"
  },
  "exclude": ["dist", "**/*.spec.ts"]
}
